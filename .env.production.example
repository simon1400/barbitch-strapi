# Production Environment Variables для Oracle Cloud
# Скопируйте этот файл в .env на сервере и заполните значения

# Server Configuration
HOST=0.0.0.0
PORT=1350

# URLs - для тестирования используйте demo-strapi.barbitch.cz
# После тестирования измените на strapi.barbitch.cz
URL=https://demo-strapi.barbitch.cz
ADMIN_URL=https://demo-strapi.barbitch.cz/admin
STRAPI_ADMIN_BACKEND_URL=https://demo-strapi.barbitch.cz

# App Keys (используйте те же что и локально!)
APP_KEYS=your_app_keys_here
API_TOKEN_SALT=your_api_token_salt_here
ADMIN_JWT_SECRET=your_admin_jwt_secret_here
TRANSFER_TOKEN_SALT=your_transfer_token_salt_here
JWT_SECRET=your_jwt_secret_here

# Database Configuration (Supabase)
DATABASE_CLIENT=postgres
DATABASE_HOST=your-supabase-host.supabase.com
DATABASE_PORT=6543
DATABASE_NAME=postgres
DATABASE_USERNAME=postgres.xxxxx
DATABASE_PASSWORD=your_password
DATABASE_SSL=true
DATABASE_SSL_REJECT_UNAUTHORIZED=false

# Cloudinary Configuration
CLOUDINARY_NAME=your_cloudinary_name
CLOUDINARY_KEY=your_cloudinary_key
CLOUDINARY_SECRET=your_cloudinary_secret

# OpenAI Configuration (если используется)
OPENAI_API_KEY=your_openai_api_key

# Environment
NODE_ENV=production
