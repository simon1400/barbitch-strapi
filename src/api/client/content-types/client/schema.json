{
  "kind": "collectionType",
  "collectionName": "clients",
  "info": {
    "singularName": "client",
    "pluralName": "clients",
    "displayName": "Клиенты"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email",
      "unique": true
    },
    "phone": {
      "type": "string",
      "required": false,
      "unique": true
    },
    "sum": {
      "type": "biginteger",
      "required": true,
      "default": "0"
    },
    "offers": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::service-provided.service-provided",
      "mappedBy": "client"
    },
    "loyaltyTransactions": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::loyalty-transaction.loyalty-transaction",
      "mappedBy": "client"
    },
    "comment": {
      "type": "blocks"
    },
    "loyaltyPoints": {
      "type": "integer",
      "default": 0,
      "required": true
    },
    "loyaltyYear": {
      "type": "integer",
      "default": 2026
    },
    "registrationDate": {
      "type": "date"
    },
    "lastVisitDate": {
      "type": "date"
    },
    "password": {
      "type": "password",
      "private": true
    },
    "isActive": {
      "type": "boolean",
      "default": true
    }
  }
}
