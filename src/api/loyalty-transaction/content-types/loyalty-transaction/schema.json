{
  "kind": "collectionType",
  "collectionName": "loyalty_transactions",
  "info": {
    "singularName": "loyalty-transaction",
    "pluralName": "loyalty-transactions",
    "displayName": "Лояльность - Транзакции"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "client": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::client.client",
      "inversedBy": "loyaltyTransactions"
    },
    "points": {
      "type": "integer",
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": ["earned", "redeemed", "expired"],
      "required": true
    },
    "description": {
      "type": "string"
    },
    "serviceProvided": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::service-provided.service-provided"
    },
    "date": {
      "type": "date",
      "required": true
    },
    "year": {
      "type": "integer",
      "default": 2026
    }
  }
}