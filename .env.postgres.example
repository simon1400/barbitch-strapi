# Приклад .env для проектів з PostgreSQL (для міграції з Wedos)
# Скопіюй це в .env для інших проектів

# Strapi Configuration
HOST=0.0.0.0
PORT=1351  # ЗМІНЮЙ для кожного проекту: 1350, 1351, 1352, тощо
NODE_ENV=production
PROJECT_NAME=strapi-project2  # ЗМІНЮЙ для кожного проекту

# URLs - ЗАМІНИ НА ДОМЕН ПРОЕКТУ!
URL=https://project2.barbitch.cz
ADMIN_URL=https://project2.barbitch.cz/admin
STRAPI_ADMIN_BACKEND_URL=https://project2.barbitch.cz

# Strapi Secret Keys - СКОПІЮЙ З WEDOS .env!
APP_KEYS=твої_ключі_з_wedos
API_TOKEN_SALT=твій_salt_з_wedos
ADMIN_JWT_SECRET=твій_secret_з_wedos
TRANSFER_TOKEN_SALT=твій_salt_з_wedos
JWT_SECRET=твій_secret_з_wedos

# PostgreSQL Database (локальна в Docker)
DATABASE_CLIENT=postgres
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=strapi
DATABASE_USERNAME=strapi
DATABASE_PASSWORD=STRONG_PASSWORD_123  # Згенеруй новий пароль!
DATABASE_SSL=false

# PostgreSQL Root Password
POSTGRES_PASSWORD=STRONG_ROOT_PASSWORD_456  # Згенеруй новий пароль!

# Cloudinary (скопіюй дані з Wedos)
CLOUDINARY_NAME=твій_cloudinary_name
CLOUDINARY_KEY=твій_cloudinary_key
CLOUDINARY_SECRET=твій_cloudinary_secret

# OpenAI (якщо використовується)
OPENAI_API_KEY=твій_openai_key

# ⚠️ ВАЖЛИВО:
# 1. Змінюй PORT для кожного проекту (1350, 1351, 1352, тощо)
# 2. Змінюй PROJECT_NAME для кожного проекту
# 3. Скопіюй всі секрети з Wedos .env (щоб адміни працювали)
# 4. Згенеруй нові паролі для DATABASE_PASSWORD та POSTGRES_PASSWORD
# 5. Заміни домен на домен цього проекту
